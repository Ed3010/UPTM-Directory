<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="100dp"

            android:background="@drawable/pink_white" />

        <TextView
            android:id="@+id/floorFireExit"
            style="@style/CustomTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:background="@drawable/fire_exit_bg"
            android:padding="10dp"
            android:text="Fire exit" />

        <TextView
            android:id="@+id/floowToilet"
            style="@style/CustomTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="30dp"
            android:background="@drawable/yellow_red"
            android:padding="10dp"
            android:text="Toilet" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/floorLift1"
                style="@style/CustomTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lift_bg"
                android:paddingHorizontal="5dp"
                android:paddingVertical="15dp"
                android:text="Lift1"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/floorLift2"
                style="@style/CustomTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lift_bg"
                android:paddingHorizontal="5dp"
                android:paddingVertical="15dp"
                android:text="Lift2"
                android:textSize="8sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="2"
            android:background="@drawable/pink_white"  />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/floorLift3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lift_bg"
                android:paddingHorizontal="5dp"
                android:paddingVertical="15dp"
                android:text="Lift3"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/floorLift4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lift_bg"
                android:paddingHorizontal="5dp"
                android:paddingVertical="15dp"
                android:text="Lift4"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/floorToilet1"
        style="@style/CustomTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="-20dp"
        android:background="@drawable/yellow_red"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="Toilet" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <View
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/pink_white"  />

        <View
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/pink_white" />

        <TextView
            android:id="@+id/lab_imac"
            style="@style/CustomTextStyle"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@drawable/white_red"
            android:gravity="center"
            android:text="Lab i-Mac"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/makmal"
                style="@style/CustomTextStyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/white_red"
                android:gravity="center"
                android:text="MakMal UMUM" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/lab1"
                    style="@style/CustomTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_red"
                    android:gravity="center"
                    android:text="Lab1" />

                <TextView
                    android:id="@+id/LAB2"
                    style="@style/CustomTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_red"
                    android:gravity="center"
                    android:text="Lab2" />

                <TextView
                    android:id="@+id/LAB3"
                    style="@style/CustomTextStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/white_red"
                    android:gravity="center"
                    android:text="Lab3" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/LAB4"
            style="@style/CustomTextStyle"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="@drawable/white_red"
            android:gravity="center"
            android:text="Lab 4" />

        <View
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom"
            android:layout_weight=".7"
            android:background="@drawable/pink_white" />

        <View
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@drawable/pink_white" />
    </LinearLayout>
</LinearLayout>